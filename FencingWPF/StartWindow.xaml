<Window x:Class="FencingWPF.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start Tournament" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!-- Left Panel -->
        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="First Name:" FontWeight="Bold"/>
            <TextBox x:Name="txtFirstName" Margin="0,4,0,8" TextChanged="TextBox_TextChanged"/>

            <TextBlock Text="Last Name:" FontWeight="Bold"/>
            <TextBox x:Name="txtLastName" Margin="0,4,0,8" TextChanged="TextBox_TextChanged"/>

            <Button x:Name="btnAddPlayer" Content="Add Player" Click="btnAddPlayer_Click"
                    IsEnabled="False" Height="32" Margin="0,8,0,0"/>

            <TextBlock x:Name="tbError" Foreground="Red" Visibility="Collapsed" TextWrapping="Wrap" Margin="0,8,0,0"/>

            <Button x:Name="btnStart" Content="Start Tournament" Click="btnStart_Click"
                    Height="36" Margin="0,20,0,0"/>
        </StackPanel>

        <!-- Right Panel -->
        <StackPanel Grid.Column="1">
            <ListBox x:Name="lbPlayers" Height="360" SelectionChanged="lbPlayers_SelectionChanged" />
            <Button x:Name="btnRemovePlayer" Content="Remove Selected" Click="btnRemovePlayer_Click"
                    Height="36" IsEnabled="False" Margin="0,8,0,0"/>
        </StackPanel>
    </Grid>
</Window>
