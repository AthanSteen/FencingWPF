<Window x:Class="FencingWPF.ResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FencingWPF.Models"
        Title="Poule Final Results" Height="600" Width="700"
        WindowStartupLocation="CenterScreen" Background="#FF1E1E1E">

    <Window.Resources>
        <local:RankToColorConverter x:Key="RankToColorConverter"/>
        <DropShadowEffect x:Key="DropShadow" BlurRadius="8" ShadowDepth="3" Opacity="0.3"/>
    </Window.Resources>

    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="20" >

            <TextBlock Text="🏆 Poule Final Standings" 
                       FontSize="28" FontWeight="Bold" Foreground="White"
                       Margin="0,0,0,20"/>

            <ItemsControl x:Name="icResults">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="10" Margin="0,5" Padding="10"
                        Background="{Binding Rank, Converter={StaticResource RankToColorConverter}}"
                        Effect="{StaticResource DropShadow}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>

                                <!-- Rank -->
                                <TextBlock Text="{Binding Rank}" 
                                           FontWeight="Bold" FontSize="16" Foreground="White"
                                           VerticalAlignment="Center"/>

                                <!-- Player Name -->
                                <TextBlock Grid.Column="1" Text="{Binding Player.FullName}" 
                                           FontSize="16" FontWeight="Bold" Foreground="White"
                                           VerticalAlignment="Center"/>

                                <!-- Wins -->
                                <TextBlock Grid.Column="2" Text="{Binding V}" Foreground="White" HorizontalAlignment="Center"/>
                                <!-- Win % -->
                                <TextBlock Grid.Column="3" Text="{Binding VM}" Foreground="White" HorizontalAlignment="Center"/>
                                <!-- TS -->
                                <TextBlock Grid.Column="4" Text="{Binding TS}" Foreground="White" HorizontalAlignment="Center"/>
                                <!-- TR -->
                                <TextBlock Grid.Column="5" Text="{Binding TR}" Foreground="White" HorizontalAlignment="Center"/>
                                <!-- Index I -->
                                <TextBlock Grid.Column="6" Text="{Binding I}" Foreground="White" HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

        </StackPanel>
    </ScrollViewer>
</Window>
